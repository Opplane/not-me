{
  "name": "u-knot-me",
  "version": "1.0.0",
  "description": "Easy and type-safe validation",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "build:release": "tsc --project tsconfig.release.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:cov:changed": "npm run test:cov -- --onlyChanged",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:debug:watch": "npm run test:debug -- --watch",
    "format": "prettier --write \"**/*.{js,jsx,json,ts,tsx,scss,sass,css,md}\"",
    "precommit": "lint-staged && npm run build"
  },
  "author": "Opplane",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.1",
    "typescript": "^4.1.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testMatch": [
      "**/*.spec.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "isolatedModules": true,
        "tsconfig": "tsconfig.json"
      }
    },
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/"
    ],
    "moduleDirectories": [
      "node_modules",
      "<rootDir>"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,json,ts,tsx,scss,sass,css,md}": "prettier --write"
  }
}
